<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.2.1/pure-min.css">
<%= stylesheet_link_tag    "home", :media => "all" %>

<% if current_user %>
<p>
	<a class="btn" href="<%=new_problem_path%>">Create Question</a>
</p>	
<% end %>

<div class="pure-g-r">

  <div class="pure-u-1-3">
    <%= render :partial => "hot_problems", :collection => @hot_problems, :as => :hot_problem %>
  </div>
  <div class="pure-u-1-3">
    <%= render :partial => "latest_problems", :collection => @latest_problems, :as => :latest_problem %>
  </div>
  
</div>