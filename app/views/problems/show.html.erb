<p id="notice"><%= notice %></p>

Title: <%= @problem.name %>  <br>
Description: <%= @problem.description %> <br> <br>

<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%= link_to 'Back', problems_path %>

<% if current_user %>
  <div id="reply" class="form box">
    <%#= render "shared/editor_toolbar" %>
    <%= form_for(Answer.new, :remote => true,:url => problem_answers_path(@problem)) do |f| %>
      <%= f.text_area :description,:class => "topic_editor span10", :rows => "4", :tabindex => "1" %>
      <div class="submit_buttons">
        <button type="submit" id="btn_reply" class="btn btn-primary" tabindex="2">Post Your Answer</button><br />
        <!-- <span class="help-inline" title="或者 Command + Enter">Ctrl+Enter</span> -->
      </div>
    <% end %>
  </div>
<% else %>
    <%= render :partial => "need_login_to_reply" %>
<% end %>
